<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Boojee Bike <strong>Le Vélo</strong> pour <strong>Tous</strong>!</h1>
    <p>Partez à la conquête de l'univers en pédalant</p>
  </div>
</div>

<div class="container">
      <div class="row gap-3 w-75 p-3">
        <% @bikes.each do |bike| %>
        <div class="col-5-5">
          <%= link_to bike_path(bike), class: 'text-decoration-none' do %>
         <div class="card-product">
            <img src="https://pi-pop.fr/wp-content/uploads/2023/05/velo-detoure-1536x1025.jpg" alt="">
            <div class="product-info">
              <div class="product-details">
                <h2><%= bike.name %></h2>
                <p><%= bike.address %></p>
              </div>
              <div>
                <h2 class="price"><%= bike.price %>/€ par jour</h2>
              </div>
            </div>
          </div>
        <% end %>
        </div>

        <% end %>
      </div>
</div>
